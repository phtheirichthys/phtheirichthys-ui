{
	admin off
}

:80 {
	# Set this path to your site's directory.
	root * /usr/share/caddy

	# Enable the static file server.
	file_server

	header {
		Access-Control-Allow-Headers *
		Access-Control-Allow-Methods *
		Access-Control-Allow-Origin *
	}
	@options {
		method OPTIONS
	}
	respond @options 204
	
	# Redirect any 404 to index
	try_files {path} /
}
